indicator("stelaraX - Momentum", overlay=false)

len = input.int(10, "Periode", minval=1)
src = input.source(close, "Quelle")
col = input.color(#2196f3, "Farbe")

momVal = ta.mom(src, len)

plot(momVal, "Momentum", color=momVal >= 0 ? #00c853 : #ff1744, linewidth=2, style=plot.style_histogram)
hline(0, "Null", color=color.new(color.gray, 50))
