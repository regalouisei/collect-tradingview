//@version=5
indicator("EMA Crossover Arrows (6 EMA & 20 EMA)", overlay=true)

// Define EMAs
ema6 = ta.ema(close, 6)
ema20 = ta.ema(close, 20)

// Detect crossovers
bullCross = ta.crossover(ema6, ema20)   // 6 EMA crosses above 20 EMA
bearCross = ta.crossunder(ema6, ema20)  // 6 EMA crosses below 20 EMA

// Plot arrows
plotshape( bullCross, title="Bullish Crossover", location=location.belowbar, color=color.new(color.blue, 0), style=shape.triangleup, size=size.small)

plotshape(bearCross, title="Bearish Crossover", location=location.abovebar, color=color.new(#ff52d4, 0), style=shape.triangledown, size=size.small)
