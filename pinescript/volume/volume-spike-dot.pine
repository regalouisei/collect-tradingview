//@version=6
indicator("Volume Spike Dot", overlay=true)

// Settings
volLength = input.int(20, "Lookback Period", minval=1)
percentageThreshold = input.float(200.0, "Percent Increase (%)", minval=0.0)

// Calculations
avgVol = ta.sma(volume[1], volLength)
volIncrease = ((volume - nz(avgVol)) / nz(avgVol)) * 100

// Condition
showDot = volIncrease >= percentageThreshold

// Plotting
plotshape(showDot, 
     title="Volume Spike Dot", 
     style=shape.circle, 
     location=location.abovebar, 
     color=color.new(color.blue, 0), 
     size=size.tiny)

// Data Window Debugger
plot(volIncrease, title="Vol Increase %", display=display.data_window)
