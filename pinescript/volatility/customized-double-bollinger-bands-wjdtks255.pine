//@version=6
indicator("Customized Double Bollinger Bands [wjdtks255]", overlay=true)
// Updated for community compliance

// --- User Inputs ---
// First Bollinger Band Settings
length1 = input.int(20, title="Band 1 Length")
stddev1 = input.float(0.5, title="Band 1 StdDev", step=0.1)
color1 = input.color(color.blue, title="Band 1 Color")
width1 = input.int(1, minval=1, maxval=5, title="Band 1 Line Width")

// Second Bollinger Band Settings
length2 = input.int(20, title="Band 2 Length")
stddev2 = input.float(3.0, title="Band 2 StdDev", step=0.1)
color2 = input.color(color.red, title="Band 2 Color")
width2 = input.int(1, minval=1, maxval=5, title="Band 2 Line Width")

// --- Bollinger Band Calculations ---
// First Bollinger Band
basis1 = ta.sma(close, length1)
dev1 = stddev1 * ta.stdev(close, length1)
upper1 = basis1 + dev1
lower1 = basis1 - dev1

// Second Bollinger Band
basis2 = ta.sma(close, length2)
dev2 = stddev2 * ta.stdev(close, length2)
upper2 = basis2 + dev2
lower2 = basis2 - dev2

// --- Plot on Chart ---
// First Bollinger Band Plots
plot(upper1, color=color1, linewidth=width1, title="Band 1 Upper")
plot(lower1, color=color1, linewidth=width1, title="Band 1 Lower")
plot(basis1, color=color1, linewidth=1, title="Band 1 Basis")

// Second Bollinger Band Plots
plot(upper2, color=color2, linewidth=width2, title="Band 2 Upper")
plot(lower2, color=color2, linewidth=width2, title="Band 2 Lower")
plot(basis2, color=color2, linewidth=1, title="Band 2 Basis")
