//@version=5
indicator("Bow and Arrow (Dhanush-Baan) Set-up ", overlay=false)


// ────────────────
// 1. Calculations
// ────────────────
dailyRange = high - low
smaRange   = ta.sma(dailyRange, 10)
below      = dailyRange < smaRange   // true on bars where range < SMA


// ────────────────
// 2. Plotting
// ────────────────
// Daily Range as thin vertical lines (histogram style)
plot(dailyRange,
     title = "Daily Range",
     style = plot.style_histogram,
     color = color.orange,
     linewidth = 2)


// 10-Day SMA: green by default, red on bars where range < SMA
plot(smaRange,
     title     = "10-Day SMA of Range",
     color     = below ? color.red : color.green,
     linewidth = 2)
