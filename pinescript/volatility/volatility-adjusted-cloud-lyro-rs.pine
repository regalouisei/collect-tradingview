//                                                 LyroRS v1.0


// Library
import TradingView/ta/9 as ta
import LyroRS/LMAs/1 as DynamicMA


// Input Groups
indi_settings_g  = "ùóúùó°ùóóùóúùóñùóîùóßùó¢ùó• ùó¶ùóòùóßùóßùóúùó°ùóöùó¶"
bb_g             = "ùó©ùóî ùóñùóüùó¢ùó®ùóó"
colors_g         = "ùóñùó¢ùóüùó¢ùó•ùó¶"


// Inputs

// -- Indicator Settings
source        = input.source(close, "Source", tooltip="Select the price source (e.g., close, open, high, low) used for calculations.", group=indi_settings_g)
midline_only  = input.bool(false,   "Midline Only", tooltip="When enabled, hides the upper/lower bands and cloud fill ‚Äî showing only the VIDYA midline.", group=indi_settings_g)


// -- VAD Cloud
len_V_bb     = input.int(25,    "VIDYA Length",       tooltip="The lookback period for the VIDYA calculation.", group=bb_g)
len_VHist_bb = input.int(35,    "SD History Length",  tooltip="The lookback period for the standard deviation history used in VIDYA smoothing constant.", group=bb_g)
vidya_multp  = input.float(1.5, "+ Multiplier",       tooltip="A multiplier applied to the VIDYA deviation to create the upper VAD Cloud band.", group=bb_g)
vidya_multn  = input.float(0.7, "- Multiplier",       tooltip="A multiplier applied to the VIDYA deviation to create the lower VAD Cloud band.", group=bb_g)
cloud_transp = input.int(80,    "Cloud Transparency", minval=0, maxval=100, tooltip="Transparency of the cloud fill between the upper and lower bands.", group=bb_g)


// Color Inputs
ColMode = input.string("Mystic", "Custom Color Palette", inline="drop", options=["Classic","Mystic","Accented","Royal"], display=display.none, group=colors_g, tooltip="Choose a predefined color scheme for indicator visualization.")
cpyn    = input.bool(true,     "Use Custom Palette",  tooltip="Enable manual selection of custom colors for trend signals.", group=colors_g, display=display.none)
cp_UpC  = input.color(#00ff00, "Custom Up",   inline="Custom Palette", tooltip="Set a custom color for bullish signals.",  group=colors_g, display=display.none)
cp_DnC  = input.color(#ff0000, "Custom Down", inline="Custom Palette", tooltip="Set a custom color for bearish signals.", group=colors_g, display=display.none)


// Colors
color UpC = na
color DnC = na

switch ColMode
    "Classic"  =>
        UpC := #00E676
        DnC := #880E4F
    "Mystic"   =>
        UpC := #30FDCF
        DnC := #E117B7
    "Accented" =>
        UpC := #9618F7
        DnC := #FF0078
    "Royal"    =>
        UpC := #FFC107
        DnC := #673AB7

if cpyn
    UpC := cp_UpC
    DnC := cp_DnC


// Table


// -- Position Switching
pot(position) =>
    var pos = switch position
        'Top Left'      => position.top_left
        'Middle Left'   => position.middle_left
        'Bottom Left'   => position.bottom_left
        'Top Right'     => position.top_right
        'Middle Right'  => position.middle_right
        'Bottom Right'  => position.bottom_right
        'Top Center'    => position.top_center
        "Middle Center" => position.middle_center
        'Bottom Center' => position.bottom_center
    pos


// VIDYA Function
vidya_calc(src, length, hist_length) =>
    SC   = 2.0 / (length + 1)
    SD_V = ta.stdev(src, length) / ta.stdev(src, hist_length)
    v    = 0.0
    v   := nz(SD_V * SC * src + (1 - SD_V * SC) * v[1], 0)
    v


// Final Processing

// VIDYA baseline
avg_bb       = vidya_calc(source, len_V_bb, len_VHist_bb)

// VIDYA-smoothed deviation
vidya_dev_bb = vidya_calc(math.abs(source - avg_bb), len_V_bb, len_VHist_bb)

// Bands
bb_positive_band = avg_bb + (vidya_dev_bb * vidya_multp)
bb_negative_band = avg_bb - (vidya_dev_bb * vidya_multn)


// Score
var int score    = 0
var int bb_score = 0

if ta.crossover(source, bb_positive_band)
    bb_score := 1
    score    := 1

if ta.crossunder(source, bb_negative_band)
    bb_score := -1
    score    := -1


// Plot Colors
pc      = score    == 1 ? UpC : score    == -1 ? DnC : color.gray
pc_bb   = bb_score == 1 ? UpC : bb_score == -1 ? DnC : color.gray
cloud_c = color.new(pc_bb, cloud_transp)

// Band display ‚Äî hidden when midline_only is true
band_display = midline_only ? display.none : display.pane + display.price_scale
fill_color   = midline_only ? color.new(color.black, 100) : cloud_c


// Plots

// -- VAD Cloud Bands (hidden when midline_only = true)
upper = plot(bb_positive_band, color=color.new(UpC, 50), title="VAD Upper Band", display=band_display, force_overlay=true)
lower = plot(bb_negative_band, color=color.new(DnC, 50), title="VAD Lower Band", display=band_display, force_overlay=true)

// -- Cloud Fill (fully transparent when midline_only = true)
fill(upper, lower, color=fill_color, title="VAD Cloud Fill")


// -- VIDYA Midline (always visible)
avgbbbb = plot(DynamicMA.ALMA(avg_bb, 20, 0, 20), color=pc_bb,                title="VIDYA Line",        force_overlay=true)
plot(DynamicMA.ALMA(avg_bb, 20, 0, 20), color=color.new(pc_bb, 85), title="VIDYA Glow Effect", linewidth=10, force_overlay=true, display= midline_only == false ? display.pane : display.none)
fill(avgbbbb, plot(close, force_overlay = true, display = display.none, editable = false), avg_bb, close, color.new(pc, 25), color.new(chart.bg_color, 75), display = midline_only == true ? display.all : display.none)


// -- Signals
plotshape(ta.crossover(score, 0),  title="Buy Signal",  location=location.belowbar, style=shape.labelup,   text="ùìõùì∏ùì∑ùì∞",  textcolor=#000000, size=size.small, color=UpC, force_overlay=true, display=display.pane)
plotshape(ta.crossunder(score, 0), title="Sell Signal", location=location.abovebar, style=shape.labeldown, text="ùì¢ùì±ùì∏ùìªùìΩ", textcolor=#000000, size=size.small, color=DnC, force_overlay=true, display=display.pane)


barcolor(pc)
plotcandle(open, high, low, close, color=pc, wickcolor=pc, bordercolor=pc, force_overlay=true, title="Plot Candle", display=display.pane)


// Alerts
alertcondition(score == 1  and score[1] != 1,  "VAD Cloud Trend - Long",  "Volatility Adjusted Cloud Trend is Long {{exchange}}:{{ticker}}")
alertcondition(score == -1 and score[1] != -1, "VAD Cloud Trend - Short", "Volatility Adjusted Cloud Trend is Short {{exchange}}:{{ticker}}")
