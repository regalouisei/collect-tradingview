// ohlc4 = OHLC4

// ############################################# END COPY BOUNDARY #############################################

plotcandle(Open, High, Low, Close, "", Close>Open ? #00CC00 : #CC0000, #FFFF0080, bordercolor=#00000000)
plot(math.sign(nptPM)==-1 ? 0.0 : na, "", #808080, trackprice=true, show_last=1)
