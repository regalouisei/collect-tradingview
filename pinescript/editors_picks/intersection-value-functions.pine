//---------------------------------------------------------------------------------------------------------------------{
//Settings
//-----------------------------------------------------------------------------{
//Sources selection
sourceA = input.string('SMA', 'Source A'
  , options = ['SMA', 'EMA', 'WMA', 'Hull', 'External A']
  , inline  = 'sourceA')

lenA    = input.int(9, '', minval = 1
