//@version=5
indicator("ROC Triple (13 / 26 / 52)", shorttitle="ROC 3x", overlay=false, precision=2)

// ===== Inputs
src = input.source(close, "Source")

lenShort = input.int(13, "ROC corto (13)", minval=1)
lenMid   = input.int(26, "ROC medio (26)", minval=1)
lenLong  = input.int(52, "ROC largo (52)", minval=1)

// Colores
colShort = input.color(color.orange, "Color ROC corto")
colMid   = input.color(color.gray,   "Color ROC medio")
colLong  = input.color(color.blue,   "Color ROC largo")
colZero  = input.color(color.silver, "Color línea 0")

// ===== Función ROC
roc(_src, _len) =>
    100 * (_src / _src[_len] - 1)

// ===== Series
rocS = roc(src, lenShort)
rocM = roc(src, lenMid)
rocL = roc(src, lenLong)

// ===== Plots
plot(rocS, title="ROC 13", color=colShort, linewidth=1)
plot(rocM, title="ROC 26", color=colMid,   linewidth=1)
plot(rocL, title="ROC 52", color=colLong,  linewidth=2)

// Línea cero
hline(0, "Cero", linestyle=hline.style_dotted, color=colZero)
