//@version=6
indicator(title="Directional Movement Index - Histogram", shorttitle="DMI Histogram", format=format.price, precision=4, timeframe="", timeframe_gaps=true)

lensig = input.int(14, title="ADX Smoothing", minval=1)
len = input.int(14, minval=1, title="DI Length")
up = ta.change(high)
down = -ta.change(low)
plusDM = na(up) ? na : (up > down and up > 0 ? up : 0)
minusDM = na(down) ? na : (down > up and down > 0 ? down : 0)
trur = ta.rma(ta.tr, len)
plus = fixnan(100 * ta.rma(plusDM, len) / trur)
minus = fixnan(100 * ta.rma(minusDM, len) / trur)
sum = plus + minus
adx = 100 * ta.rma(math.abs(plus - minus) / (sum == 0 ? 1 : sum), lensig)
// Show histograms
plot(adx, color=#F50057, title="ADX", style=plot.style_histogram)
plot(plus, color=#2962FF, title="+DI", style=plot.style_histogram)
plot(minus, color=#FF6D00, title="-DI", style=plot.style_histogram)
