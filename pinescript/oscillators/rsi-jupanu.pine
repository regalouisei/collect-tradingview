//@version=6
indicator("RSI Single Wide Arrow On Price", overlay=true)

// RSI
rsiLen = input.int(14, "RSI Length")
rsiVal = ta.rsi(close, rsiLen)

// Condiții
overbought = rsiVal > 70
oversold   = rsiVal < 30

// === SĂGEATĂ VERDE (RSI > 70) ===
if overbought
    label.new(
        bar_index,
        high,
        text="▼",
        style=label.style_none,
        textcolor=color.green,
        size=size.large
    )

// === SĂGEATĂ ROȘIE (RSI < 30) ===
if oversold
    label.new(
        bar_index,
        low,
        text="▲",
        style=label.style_none,
        textcolor=color.red,
        size=size.large
    )
