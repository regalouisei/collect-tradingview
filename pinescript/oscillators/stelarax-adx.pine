indicator("stelaraX - ADX", overlay=false)

len      = input.int(14, "ADX Periode", minval=1)
smooth   = input.int(14, "Glättung", minval=1)
colADX   = input.color(#ff9800, "Farbe ADX")
colDIp   = input.color(#00c853, "Farbe DI+")
colDIm   = input.color(#ff1744, "Farbe DI-")
threshold = input.int(25, "Trend-Schwelle", minval=1)

[diPlus, diMinus, adxVal] = ta.dmi(len, smooth)

plot(adxVal, "ADX", color=colADX, linewidth=2)
plot(diPlus, "DI+", color=colDIp, linewidth=1)
plot(diMinus, "DI-", color=colDIm, linewidth=1)
hline(threshold, "Schwelle", color=color.new(color.gray, 50), linestyle=hline.style_dashed)
