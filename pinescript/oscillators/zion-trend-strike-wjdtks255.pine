indicator("ZION Trend Strike [wjdtks255]", overlay=true, precision=2)

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// ðŸ“Œ 1. Parameters & Configuration
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
len    = input.int(14, "Momentum Strength Period", minval=1)
smooth = input.int(3, "Oscillator Smoothing")

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// ðŸ“Œ 2. Engine Logic: ZION Momentum Flow
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
rsi_val = ta.rsi(close, len)
osc = ta.ema(rsi_val - 50, smooth)
trend_ema = ta.ema(close, 20)

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// ðŸ“Œ 3. Signal Generation Logic
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// Long: Momentum crosses above baseline OR breaks out with high momentum above Trend Guide
long_signal  = ta.crossover(osc, 0) or (osc > 15 and ta.crossover(close, trend_ema))
// Short: Momentum crosses below baseline OR breaks down with high selling pressure
short_signal = ta.crossunder(osc, 0) or (osc < -15 and ta.crossunder(close, trend_ema))

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// ðŸ“Œ 4. Visual Layout (Trend Guide & Labels)
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
plot(trend_ema, "Dynamic Trend Guide", color=osc > 0 ? color.new(color.green, 50) : color.new(color.red, 50), linewidth=2)

// Execution Labels
plotshape(long_signal and osc > 0, "Institutional BUY", shape.labelup, location.belowbar, color.new(#00ff00, 0), text="BUY", textcolor=color.black, size=size.small)
plotshape(short_signal and osc < 0, "Institutional SELL", shape.labeldown, location.abovebar, color.new(#ff0000, 0), text="SELL", textcolor=color.white, size=size.small)

// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
// ðŸ“Œ 5. Automation Alerts
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
alertcondition(long_signal and osc > 0, "ZION Buy Match", "ðŸš€ ZION Momentum Entry: BUY at {{close}}")
alertcondition(short_signal and osc < 0, "ZION Sell Match", "ðŸ’€ ZION Momentum Exit: SELL at {{close}}")
