indicator("stelaraX - RSI", overlay=false)

len = input.int(14, "RSI Periode", minval=1)
src = input.source(close, "Quelle")
ob  = input.int(70, "Überkauft", minval=50, maxval=100)
os  = input.int(30, "Überverkauft", minval=0, maxval=50)

rsiVal = ta.rsi(src, len)

plot(rsiVal, "RSI", color=#2196f3, linewidth=2)
hOB = hline(ob, "Überkauft", color=color.new(#ff1744, 50))
hOS = hline(os, "Überverkauft", color=color.new(#00c853, 50))
hline(50, "Mitte", color=color.new(color.gray, 70))
fill(hOB, hOS, color=color.new(#2196f3, 90), title="RSI Zone")
