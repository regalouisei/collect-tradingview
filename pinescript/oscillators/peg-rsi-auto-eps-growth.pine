//@version=5
indicator("PEG RSI (Auto EPS Growth Only)", overlay=false, scale=scale.right)

//-------------------- EPS TTM --------------------
eps_ttm = request.financial(syminfo.tickerid, "EARNINGS_PER_SHARE", "TTM")

//-------------------- CAGR Growth --------------------
years = input.float(4.0, "Years for CAGR Growth", minval=0.5, step=0.5)

// For daily charts: 1 year is approx. 252 trading days
bars_per_year = 252.0
lookback_bars = math.round(years * bars_per_year)

enough = bar_index > lookback_bars and not na(eps_ttm) and not na(eps_ttm[lookback_bars])
eps_past = enough ? eps_ttm[lookback_bars] : na

// Calculate Growth: Conditions combined to prevent line-break syntax errors
auto_growth_pct = (enough and eps_ttm > 0 and eps_past > 0) ? (math.pow(eps_ttm / eps_past, 1.0 / years) - 1.0) * 100 : na

growth_safe = not na(auto_growth_pct) and math.abs(auto_growth_pct) > 0.01 ? auto_growth_pct : na

//-------------------- PEG --------------------
pe  = eps_ttm > 0 ? close / eps_ttm : na
peg = not na(growth_safe) ? pe / growth_safe : na

//-------------------- RSI --------------------
rsi_len = input.int(14, "RSI Length")
peg_rsi = na(peg) ? na : ta.rsi(peg, rsi_len)

//-------------------- Plot --------------------
plot(peg_rsi, "PEG RSI", color=color.rgb(2,128,253), linewidth=2)
hline(70, "RSI OB", color=color.new(color.red,30))
hline(30, "RSI OS", color=color.new(color.green,30))
