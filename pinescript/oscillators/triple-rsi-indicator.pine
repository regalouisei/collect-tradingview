//@version=6
indicator("Triple RSI Indicator", overlay=false)

// Kullanıcı parametreleri
length = input(14, title="RSI Periyodu")

// Parite seçimleri (varsayılanlar: EURUSD, GBPUSD, DXY)
symbol1 = input.symbol("EURUSD", title="1. Parite")
symbol2 = input.symbol("GBPUSD", title="2. Parite")
symbol3 = input.symbol("DXY",    title="3. Parite")

// RSI hesaplamaları - tümü request.security ile çekiliyor
rsi1 = ta.rsi(request.security(symbol1, timeframe.period, close), length)
rsi2 = ta.rsi(request.security(symbol2, timeframe.period, close), length)
rsi3 = ta.rsi(request.security(symbol3, timeframe.period, close), length)

// RSI çizgilerini farklı renklerde çizme
plot(rsi1, title="RSI 1", color=color.blue, linewidth=2)
plot(rsi2, title="RSI 2", color=color.green, linewidth=2)
plot(rsi3, title="RSI 3", color=color.red, linewidth=2)

// Aşırı alım ve aşırı satım seviyelerini gösteren çizgiler
hline(70, "Overbought", color=color.gray)
hline(50, "Neutral", color=color.gray)
hline(30, "Oversold", color=color.gray)
