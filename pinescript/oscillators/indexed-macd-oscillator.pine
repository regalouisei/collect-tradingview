//@version=6
indicator("Indexed MACD Oscillator", overlay=false)

// Calculate MACD components
MACD = ta.ema(close, 12) - ta.ema(close, 26)
SIGNAL = ta.ema(MACD, 9)
HIST = MACD - SIGNAL

// Scale HIST to range 0-100
scaled_hist = (HIST - ta.lowest(HIST, 100)) / (ta.highest(HIST, 100) - ta.lowest(HIST, 100)) * 100

// Plotting
plot(scaled_hist, title="Indexed Oscillator", color=color.black, style=plot.style_stepline, linewidth=1)
hline(0, "Zero Line", color=color.gray)
hline(100, "100", color=color.gray)
