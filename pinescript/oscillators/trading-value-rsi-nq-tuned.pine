//@version=5
indicator("Trading Value RSI (NQ Tuned)", overlay=false)

// INPUT PARAMETERS (NQ DEFAULTS)
rsiLength  = input.int(24, minval=1, title="RSI Length")
overbought = input.int(75, minval=50, maxval=100, title="Overbought Level")
oversold   = input.int(25, minval=0, maxval=50, title="Oversold Level")
showMid    = input.bool(true, title="Show 50 Midline")

// TRADING VALUE CALCULATION
tradingValue = volume * close

// RSI CALCULATION
tvRSI = ta.rsi(tradingValue, rsiLength)

// COLOR LOGIC
rsiColor =
     tvRSI > overbought ? color.red :
     tvRSI < oversold   ? color.green :
                           color.blue

// PLOTS
plot(tvRSI, title="Trading Value RSI", linewidth=2, color=rsiColor)

hline(overbought, title="Overbought", linestyle=hline.style_dashed, color=color.red)
hline(oversold, title="Oversold", linestyle=hline.style_dashed, color=color.green)

midLineColor = showMid ? color.gray : color.new(color.gray, 100)
hline(50, title="Midline", linestyle=hline.style_dotted, color=midLineColor)
