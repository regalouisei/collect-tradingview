//@version=6
indicator("RSI + BOA", overlay=false)

// ── RSI 参数与绘制
rsiLength = input.int(14, "RSI length")
rsiOB = input.float(70.0, "RSI Overbought")
rsiOS = input.float(30.0, "RSI Oversold")
rsi = ta.rsi(close, rsiLength)
plot(rsi, title="RSI", color=color.new(color.yellow, 0), linewidth=2)
hline(rsiOB, "RSI Overbought", color=color.new(color.red, 70))
hline(rsiOS, "RSI Oversold", color=color.new(color.teal, 70))
hline(50, "RSI middle-line", color=color.new(color.gray, 80))

// ── BOA (Stochastic) 参数与绘制
kLen = input.int(5, "BOA %K length")
dLen = input.int(3, "BOA %D length")
smoothK = input.int(3, "smoothK length")
k = ta.sma(ta.stoch(close, high, low, kLen), smoothK)
d = ta.sma(k, dLen)
plot(k, title="BOA %K", color=color.new(color.green, 0), linewidth=1)
plot(d, title="BOA %D", color=color.new(color.blue, 0), linewidth=1)
hline(80, "BOA Overbought", color=color.new(color.red, 80))
hline(20, "BOA Oversold", color=color.new(color.teal, 80))
