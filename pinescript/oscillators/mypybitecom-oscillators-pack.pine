//@version=5
indicator("MYPYBITE.com â€“ Oscillators Pack", overlay = false)

// ----- RSI -----
rsiLen  = input.int(14, "RSI Length", minval = 1)
rsiMaLn = input.int(9,  "RSI MA Length", minval = 1)

rsiVal  = ta.rsi(close, rsiLen)
rsiMa   = ta.sma(rsiVal, rsiMaLn)

plot(rsiVal, color = color.new(color.fuchsia, 0), linewidth = 2, title = "RSI")
plot(rsiMa,  color = color.new(color.purple,  0), linewidth = 1, title = "RSI MA")
hline(70, "RSI Overbought", color = color.new(color.red, 70))
hline(30, "RSI Oversold",   color = color.new(color.lime,70))

// ----- Stoch RSI -----
stRsiLen = input.int(14, "Stoch RSI Length",   minval = 1)
stKLen   = input.int(3,  "Stoch RSI K Smoothing", minval = 1)
stDLen   = input.int(3,  "Stoch RSI D Smoothing", minval = 1)

rsiSrc   = ta.rsi(close, stRsiLen)
rsiLow   = ta.lowest(rsiSrc, stRsiLen)
rsiHigh  = ta.highest(rsiSrc, stRsiLen)
stochRsi = (rsiHigh - rsiLow != 0) ? (rsiSrc - rsiLow) / (rsiHigh - rsiLow) * 100.0 : 0.0
k        = ta.sma(stochRsi, stKLen)
d        = ta.sma(k,        stDLen)

plot(k, color = color.new(color.aqua, 0), title = "Stoch RSI %K")
plot(d, color = color.new(color.blue, 0), title = "Stoch RSI %D")
hline(80, "Stoch Overbought", color = color.new(color.red, 80))
hline(20, "Stoch Oversold",   color = color.new(color.lime,80))

// ----- Momentum -----
momLen = input.int(10, "Momentum Length", minval = 1)
momVal = ta.mom(close, momLen)

plot(momVal, color = color.new(color.white, 0), title = "Momentum", linewidth = 1)
hline(0, "Zero Line", color = color.new(color.gray, 70))
