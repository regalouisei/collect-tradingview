//@version=6
indicator("RSI Display)", overlay=true)

// === Paramètres RSI ===
rsi_length = input.int(14, "RSI Length")
rsi_source = input.source(close, "Source")
rsi = ta.rsi(rsi_source, rsi_length)

// === Seuils ===
rsi_overbought = 70
rsi_oversold = 30

// === Couleur selon la zone ===
rsi_color = (rsi > rsi_overbought or rsi < rsi_oversold) ? color.red : color.lime

// === Table fixe (HUD) ===
var table rsi_table = table.new(position.top_center, 1, 1)

// === Mise à jour du contenu (fond noir + 2 décimales) ===
rsi_text = "RSI : " + str.tostring(rsi, "#.##")
table.cell(rsi_table, 0, 0, rsi_text, text_color=rsi_color, text_size=size.large, bgcolor=color.black)
