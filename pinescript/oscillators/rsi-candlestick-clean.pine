//@version=5
indicator("RSI Candlestick Clean", shorttitle="RSI MONSTER 1.0", overlay=false)

// Input
rsiLen = input.int(14, "RSI Length")

// RSI OHLC
rsiClose = ta.rsi(close, rsiLen)
rsiOpen  = rsiClose[1]
rsiHigh  = ta.rsi(high, rsiLen)
rsiLow   = ta.rsi(low, rsiLen)

// RSI Candle (Mobile Safe)
plotcandle(rsiOpen, rsiHigh, rsiLow, rsiClose, color=color.black, wickcolor=color.black, bordercolor=color.black)

// Levels
hline(70, "Overbought", color=color.gray)
hline(30, "Oversold", color=color.gray)
hline(50, "Midline", color=color.gray)
