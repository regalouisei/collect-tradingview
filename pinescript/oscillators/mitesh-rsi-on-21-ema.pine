//@version=5
indicator("RSI on 21 EMA", shorttitle="RSI(21 EMA)")
ema_length = input.int(21, "EMA Length")
rsi_length = input.int(10, "RSI Length")
ema_src = input(close, "EMA Source")
ema21 = ta.ema(ema_src, ema_length)
rsi_ema = ta.rsi(ema21, rsi_length)
plot(rsi_ema, color=color.purple, title="RSI on 21 EMA", linewidth=2)
hline(90, "Overbought", color=color.red, linestyle=hline.style_dashed)
hline(10, "Oversold", color=color.green, linestyle=hline.style_dashed)
hline(50, color=color.gray)
