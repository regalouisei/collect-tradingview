//@version=5
indicator("VA's STRIKE Set UP EMA 20&50", overlay = true)

// === EMA Calculations ===
ema20 = ta.ema(close, 20)
ema50 = ta.ema(close, 50)

// === Timeframe Conditions ===
is5min  = timeframe.period == "5"
is1hour = timeframe.period == "60"

showEMAs = is5min or is1hour

// === Plot EMAs (only on 5m & 1H) ===
plot(showEMAs ? ema20 : na, color=color.red,    title="EMA 20")
plot(showEMAs ? ema50 : na, color=color.orange, title="EMA 50")
