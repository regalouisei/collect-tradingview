//@version=6
indicator('VIX', shorttitle = 'VIXATA', overlay = false)

// VIX sembolünü al
vixSymbol = input.symbol('CBOE:VIX', 'VIX Sembolü')
vixClose = request.security(vixSymbol, timeframe.period, close)

// Renk ayarları (yeni seviyeler: 15, 20, 25, 30, 40)
lineColor = vixClose >= 40 ? color.new(color.purple, 0) : vixClose >= 30 ? color.new(color.red, 0) : vixClose >= 25 ? color.new(color.orange, 0) : vixClose >= 20 ? color.new(color.yellow, 0) : vixClose >= 15 ? color.new(color.blue, 0) : color.new(color.green, 0)

// Ana çizgi
plot(vixClose, 'VIX', color = lineColor, linewidth = 2)

// Seviyeler
hline(40, 'Çöküş / Kriz', color = color.purple, linestyle = hline.style_solid, linewidth = 3)
hline(30, 'Panik / Aşırı Korku', color = color.red, linestyle = hline.style_dashed, linewidth = 2)
hline(25, 'Yüksek Korku', color = color.orange, linestyle = hline.style_dashed)
hline(20, 'Hafif Korku / Tedirginlik', color = color.yellow, linestyle = hline.style_dotted)
hline(15, 'Normal / Kabul Edilebilir', color = color.blue, linestyle = hline.style_dotted)
hline(0, 'Düşük Korku / İyimserlik', color = color.green, linestyle = hline.style_solid)

// Arka plan rengi
bgcolor(vixClose >= 40 ? color.new(color.purple, 90) : vixClose >= 30 ? color.new(color.red, 90) : vixClose <= 15 ? color.new(color.green, 90) : na)
