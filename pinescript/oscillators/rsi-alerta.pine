//@version=6
indicator("rsi alerta")

RSI_Valor = input(7, "Valor Rsi")
rsi = ta.rsi(close,RSI_Valor)
Valor_compra =input(26, "Valor compra RSI")


plot(rsi)
plot(70)
plot(30)
plotshape(rsi<Valor_compra, style = shape.cross, location = location.bottom,color = color.yellow)

alertcondition( rsi < Valor_compra, "RSI alerta", "comprar por rsi")
