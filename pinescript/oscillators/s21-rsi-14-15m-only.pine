//@version=5
indicator("RSI 14 (15m only)", overlay = false)

// === RSI Calculation ===
rsiValue = ta.rsi(close, 14)

// === Timeframe Condition (15 minutes only) ===
is15min = timeframe.period == "15"

// === Plot RSI only on 15m ===
plot(is15min ? rsiValue : na, title="RSI 14", linewidth=2)

// === Optional Levels ===
hline(70, "Overbought", color=color.rgb(254, 254, 254))
hline(30, "Oversold",  color=color.rgb(252, 252, 252))
hline(50, "Midline",   color=color.rgb(223, 243, 159))
