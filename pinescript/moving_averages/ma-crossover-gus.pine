//@version=5
indicator("MA Crossover", overlay=true)
// Settings - users can change these
fastLength = input.int(9,title="Fast MA Length")
slowLength= input .int(21, title="Slow MA Length")

//Calculate the moving averages
fastMA = ta . sma(close, fastLength)
slowMA = ta . sma(close, slowLength)

// Plot them on the chart
plot(fastMA, title="Fast MA")
color=color . blue, linewidth=2
plot(slowMA, title="Slow MA",color=color .orange, linewidth=2)
//Detect crossovers
bullish = ta . crossover (fastMA, slowMA)
bearish = ta . crossunder (fastMA, slowMA)
//Draw signals on the chart
plotshape(bullish, title="buy Signal",style=shape .triangleup,location=location.belowbar , color=color. green, size=size . small)
plotshape (bearish, title="sell signal",style=shape. triangledown,location=location.abovebar,color=color.red, size=size.small)
