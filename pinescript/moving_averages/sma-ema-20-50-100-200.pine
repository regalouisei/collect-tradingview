//@version=6
indicator("SMA & EMA 20 / 50 / 100 / 200", overlay = true)

// === GLOBAL INPUTS ===
showSMA = input.bool(true, "Show SMA Group")
showEMA = input.bool(true, "Show EMA Group")

// === INDIVIDUAL INPUTS ===
show20  = input.bool(true,  "Show 20")
show50  = input.bool(true,  "Show 50")
show100 = input.bool(true,  "Show 100")
show200 = input.bool(true,  "Show 200")

// === LENGTHS ===
len20  = 20
len50  = 50
len100 = 100
len200 = 200

// === CALCULATIONS ===
// SMA
sma20  = ta.sma(close, len20)
sma50  = ta.sma(close, len50)
sma100 = ta.sma(close, len100)
sma200 = ta.sma(close, len200)

// EMA
ema20  = ta.ema(close, len20)
ema50  = ta.ema(close, len50)
ema100 = ta.ema(close, len100)
ema200 = ta.ema(close, len200)

// === PLOTS ===
// SMA lines
plot(showSMA and show20  ? sma20  : na, color=color.orange, title="SMA 20",  linewidth=1)
plot(showSMA and show50  ? sma50  : na, color=color.red,    title="SMA 50",  linewidth=1)
plot(showSMA and show100 ? sma100 : na, color=color.teal,   title="SMA 100", linewidth=1)
plot(showSMA and show200 ? sma200 : na, color=color.blue,   title="SMA 200", linewidth=1)

// EMA lines
plot(showEMA and show20  ? ema20  : na, color=color.new(color.orange, 50), title="EMA 20",  linewidth=1)
plot(showEMA and show50  ? ema50  : na, color=color.new(color.red, 50),    title="EMA 50",  linewidth=1)
plot(showEMA and show100 ? ema100 : na, color=color.new(color.teal, 50),   title="EMA 100", linewidth=1)
plot(showEMA and show200 ? ema200 : na, color=color.new(color.blue, 50),   title="EMA 200", linewidth=1)
