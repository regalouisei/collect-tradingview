//@version=6
indicator("Daily Multi‑MA Transfer (7 MAs)", overlay = true, max_lines_count = 500)

// === Inputs ===
src = input.source(close, "Source")

maType1 = input.string("SMA", "MA 1 Type", options=["SMA", "EMA"])
len1    = input.int(10,  "MA 1 Length")

maType2 = input.string("SMA", "MA 2 Type", options=["SMA", "EMA"])
len2    = input.int(20,  "MA 2 Length")

maType3 = input.string("SMA", "MA 3 Type", options=["SMA", "EMA"])
len3    = input.int(50,  "MA 3 Length")

maType4 = input.string("SMA", "MA 4 Type", options=["SMA", "EMA"])
len4    = input.int(100, "MA 4 Length")

maType5 = input.string("SMA", "MA 5 Type", options=["SMA", "EMA"])
len5    = input.int(200, "MA 5 Length")

maType6 = input.string("SMA", "MA 6 Type", options=["SMA", "EMA"])
len6    = input.int(300, "MA 6 Length")

maType7 = input.string("SMA", "MA 7 Type", options=["SMA", "EMA"])
len7    = input.int(400, "MA 7 Length")

// === Function to choose SMA or EMA ===
f_ma(_src, _len, _type) =>
    _type == "SMA" ? ta.sma(_src, _len) : ta.ema(_src, _len)

// === Request Daily Values ===
dailyMA1 = request.security(syminfo.tickerid, "D", f_ma(src, len1, maType1), barmerge.gaps_off)
dailyMA2 = request.security(syminfo.tickerid, "D", f_ma(src, len2, maType2), barmerge.gaps_off)
dailyMA3 = request.security(syminfo.tickerid, "D", f_ma(src, len3, maType3), barmerge.gaps_off)
dailyMA4 = request.security(syminfo.tickerid, "D", f_ma(src, len4, maType4), barmerge.gaps_off)
dailyMA5 = request.security(syminfo.tickerid, "D", f_ma(src, len5, maType5), barmerge.gaps_off)
dailyMA6 = request.security(syminfo.tickerid, "D", f_ma(src, len6, maType6), barmerge.gaps_off)
dailyMA7 = request.security(syminfo.tickerid, "D", f_ma(src, len7, maType7), barmerge.gaps_off)

// === Plotting ===
plot(dailyMA1, color=color.new(color.blue,   0), linewidth=2, title="Daily MA 1")
plot(dailyMA2, color=color.new(color.orange, 0), linewidth=2, title="Daily MA 2")
plot(dailyMA3, color=color.new(color.green,  0), linewidth=2, title="Daily MA 3")
plot(dailyMA4, color=color.new(color.red,    0), linewidth=2, title="Daily MA 4")
plot(dailyMA5, color=color.new(color.purple, 0), linewidth=2, title="Daily MA 5")
plot(dailyMA6, color=color.new(color.teal,   0), linewidth=2, title="Daily MA 6")
plot(dailyMA7, color=color.new(color.yellow, 0), linewidth=2, title="Daily MA 7")
