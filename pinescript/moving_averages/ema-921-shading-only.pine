//@version=6
indicator("EMA 9/21 Shading Only", overlay=true)

// === EMA Parameters ===
shortEmaLen = 9
longEmaLen = 21

// === EMA Calculations ===
shortEma = ta.ema(close, shortEmaLen)
longEma = ta.ema(close, longEmaLen)

// === Plot EMAs ===
ema9Plot = plot(shortEma, title="9 EMA", color=color.blue)
ema21Plot = plot(longEma, title="21 EMA", color=color.red)

// === Shade Between EMAs ===
fillColor = shortEma > longEma 
     ? color.new(color.green, 80) 
     : color.new(color.red, 80)

fill(ema9Plot, ema21Plot, color=fillColor)
