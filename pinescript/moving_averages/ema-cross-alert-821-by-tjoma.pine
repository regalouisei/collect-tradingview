//@version=5
indicator("EMA Cross Alert (8/21)", shorttitle="EMA8/21 Cross", overlay=true)

// === Eingaben ===
emaFastLen = input.int(8, "Schnelle EMA")
emaSlowLen = input.int(21, "Langsame EMA")
alertOnCross = input.bool(true, "Alarm bei Kreuzung aktivieren")

// === Berechnung ===
emaFast = ta.ema(close, emaFastLen)
emaSlow = ta.ema(close, emaSlowLen)

plot(emaFast, color=color.new(color.teal, 0), title="EMA 8")
plot(emaSlow, color=color.new(color.orange, 0), title="EMA 21")

// === Kreuzungen ===
bullCross = ta.crossover(emaFast, emaSlow)
bearCross = ta.crossunder(emaFast, emaSlow)

// === Alerts ===
if (alertOnCross)
    if (bullCross)
        alert("ðŸ“ˆ BUY-Signal: EMA8 kreuzt Ã¼ber EMA21 auf " + str.tostring(timeframe.period), alert.freq_once_per_bar_close)
    if (bearCross)
        alert("ðŸ“‰ SELL-Signal: EMA8 kreuzt unter EMA21 auf " + str.tostring(timeframe.period), alert.freq_once_per_bar_close)
