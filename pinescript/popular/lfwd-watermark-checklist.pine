//@version=5
indicator("LFWD Watermark + Checklist", overlay=true)

//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// INPUTS
//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
watermarkText = input.string("I will stop trading based on emotion. I will trade based on process. I will build the trader I respect.", "Watermark Text")

watermarkSize = input.string("large", "Watermark Size", options=["tiny", "small", "normal", "large", "huge"])
checklistSize = input.string("normal", "Checklist Size", options=["tiny", "small", "normal", "large", "huge"])

showWatermark = input.bool(true, "Show Watermark")
showChecklist = input.bool(true, "Show Checklist")

//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// COLOR SETTINGS
//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
watermarkTextColor = input.color(color.new(color.white, 65), "Watermark Text Color")
watermarkBgColor   = input.color(color.new(color.black, 100), "Watermark Background Color")

checklistHeaderTextColor = input.color(color.white, "Checklist Header Text Color")
checklistHeaderBgColor   = input.color(color.black, "Checklist Header Background Color")

checklistTextColor = input.color(color.white, "Checklist Text Color")
checklistBgColor   = input.color(color.new(color.black, 70), "Checklist Background Color")

//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// WATERMARK
//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
var table watermarkTable = table.new(position.top_center, 1, 1)

if barstate.islast and showWatermark
    table.cell(watermarkTable, 0, 0, watermarkText, text_color=watermarkTextColor, text_size=watermarkSize, bgcolor=watermarkBgColor)

//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
// CHECKLIST
//━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
var table checklistTable = table.new(position.bottom_right, 1, 6)

if barstate.islast and showChecklist
    table.cell(checklistTable, 0, 0, "LFWD CHECKLIST", text_color=checklistHeaderTextColor, text_size=checklistSize, bgcolor=checklistHeaderBgColor)

    table.cell(checklistTable, 0, 1, "☐ 1 - Momentum & Intent", text_color=checklistTextColor, text_size=checklistSize, bgcolor=checklistBgColor)
    table.cell(checklistTable, 0, 2, "☐ 2 - Liquidity Grab", text_color=checklistTextColor, text_size=checklistSize, bgcolor=checklistBgColor)
    table.cell(checklistTable, 0, 3, "☐ 3 - Break of Structure", text_color=checklistTextColor, text_size=checklistSize, bgcolor=checklistBgColor)
    table.cell(checklistTable, 0, 4, "☐ 4 - Supply or Demand", text_color=checklistTextColor, text_size=checklistSize, bgcolor=checklistBgColor)
    table.cell(checklistTable, 0, 5, "☐ 5 - Time and Price", text_color=checklistTextColor, text_size=checklistSize, bgcolor=checklistBgColor)
